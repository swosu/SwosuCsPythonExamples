# Makefile for Beamer presentation
# Jeremy Evert â€” Source Code Management slides

TARGET = main
PDF = $(TARGET).pdf

# Default build rule
all: $(PDF)

$(PDF): $(TARGET).tex
	@echo "ðŸ§  Compiling Beamer presentation..."
	latexmk -pdf -interaction=nonstopmode $(TARGET).tex
	@echo "âœ… Build complete: $(PDF)"

# Clean auxiliary files
clean:
	@echo "ðŸ§¹ Cleaning up LaTeX build files..."
	latexmk -c
	rm -f $(PDF)
	@echo "ðŸ§¼ Clean complete."

# Clean everything except PDF (for when you want to keep your final)
tidy:
	@echo "ðŸ§½ Tidying up auxiliary files (keeping PDF)..."
	latexmk -c
	@echo "âœ¨ All tidy!"

# View the final PDF
view:
	@echo "ðŸ‘€ Opening $(PDF)..."
ifeq ($(OS),Windows_NT)
	start $(PDF)
else
	xdg-open $(PDF) || open $(PDF)
endif

# Rebuild from scratch
rebuild: clean all view

