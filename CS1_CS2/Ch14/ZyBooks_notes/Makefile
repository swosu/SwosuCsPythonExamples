# Simple Makefile for Recursion Workbook

TEX = main.tex
PDF = main.pdf

all: $(PDF)

$(PDF): $(TEX)
	@echo "ðŸ§  Compiling LaTeX..."
	latexmk -pdf -interaction=nonstopmode $(TEX)

clean:
	@echo "ðŸ§¹ Cleaning up LaTeX build files..."
	latexmk -c

view: $(PDF)
	@echo "ðŸ‘€ Opening PDF..."
	xdg-open $(PDF) &

.PHONY: all clean view

