digraph MontyHallFSM {
  rankdir=LR;
  labelloc="t";
  label="Monty Hall Finite STate Machine";
  fontsize=18;

  node [shape=circle, fontsize=12];
  edge [fontsize=11];

  start [shape=point];

  // --- Core states ---
  Ready         [label="Ready"];
  Game_Pick     [label="Game decides\n prize location\n(door i)"];
  Player_Pick   [label="Player Picks\n(door i)"];
  Game_Reveal   [label="Host Opens\n(goat door)"];
  Player_Decide [label="Player Decides\nStay / Switch"];
  Win           [shape=doublecircle, label="Win"];
  Lose          [shape=doublecircle, label="Lose"];

  start -> Ready;

  // --- Flow ---
  Ready         -> Game_Pick      [label="new\n game"];
  Game_Pick     -> Player_Pick   
  Player_Pick   -> Game_Reveal    [label="reveal\n step"];
  Game_Reveal   -> Player_Decide  [label="offer\n switch"];

  // --- Outcomes (placeholder logic labels; refine with more states) ---
  Player_Decide -> Win  [label="(depends where\n the prize is)"];
  Player_Decide -> Lose [label="(depends where\n the prize is)"];

  // --- Reset ---
  Win  -> Ready [label="reset the game"];
  Lose -> Ready [label="reset the game"];
}

